<%- include('include/head.ejs') %>
    <link rel="stylesheet" href="/css/facility.css">
    <link rel="stylesheet" href="/css/search.css">
    <link rel="stylesheet" href="/css/admin_service.css">
    <link rel="stylesheet" href="/css/top_nav_white.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/transition.css">
    </head>

    <body>
        <div id="main-body">
            <div id="header">
                <div id="navigation">
                    <%- include('include/top_nav.ejs')%>
                </div>
            </div>
            <h2 style="color:white;text-align:center;font-weight:400;font-size:24px;">Your facilities</h2>

            <% if(facilities.length > 0) { %>
                <div class="grid-container">
                    <% facilities.forEach(facility => { %>
                        <!--need to modify this link to control the admin control page-->
                        <a href="/details/<%= facility.title %>">
                            <div class="grid-item">
                                <div class="col-md-4">
                                    <div class="profile-card-6"><img src="<%= facility.image %>" class="img img-responsive">
                                        <div class="profile-name">
                                            <%= facility.title %>
                                        </div>
                                        <div class="profile-overview">
                                            <div class="profile-overview">
                                                <div class="row text-center">
                                                    <div class="col-xs-4">
                                                        <h3>
                                                            <%= facility.rating %>âœ°</h3>

                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                        <% }) %>
                </div>
                <% } else { %>

                    <%- include('include/items.ejs')%>
                        <% } %>

        </div>


        <%- include('include/end.ejs')%>